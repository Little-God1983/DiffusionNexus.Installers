<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DiffusionNexus.Installers.ViewModels"
        xmlns:views="using:DiffusionNexus.Installers.Views"
        x:Class="DiffusionNexus.Installers.Views.MainWindow"
        Title="Git Repositories Manager"
        x:DataType="vm:MainWindowViewModel"
        Width="1000"
        Height="700">
    
    <TabControl>
        <!-- Tab 1: Configuration -->
        <TabItem Header="Configuration">
            <views:ConfigurationView DataContext="{Binding ConfigurationViewModel}"/>
        </TabItem>

        <!-- Tab 2: Installation -->
        <TabItem Header="Installation">
            <views:InstallationView DataContext="{Binding InstallationViewModel}"/>
        </TabItem>
    </TabControl>
</Window>
